module UI.SplashScreen exposing (splashScreen)

import Element
import Element.Background as Background
import Html exposing (Html)
import Model.Screen exposing (Screen)
import Svg exposing (Svg, path, svg)
import Svg.Attributes as Attributes
import UI.Core exposing (colorSplashScreenBackground)


splashScreen : Screen -> Html msg
splashScreen screen =
    let
        logoWidthMultiplier =
            case screen.orientation of
                Element.Portrait ->
                    0.8

                Element.Landscape ->
                    0.4

        logoWidth =
            min 640.0 (toFloat screen.width * logoWidthMultiplier)
    in
    Element.layout
        [ Background.color colorSplashScreenBackground
        , Element.width Element.fill
        , Element.height Element.fill
        , Element.clip
        ]
        (Element.el
            [ Element.centerX
            , Element.centerY
            ]
            (logoWidth
                |> logo
                |> Element.html
            )
        )


